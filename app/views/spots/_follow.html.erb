<% if @user.following?(@spot.user) %>
  <%= form_with(model: @user.active_relationships.find_by(followed_id: @spot.user_id),
    html: { method: :delete },url: relationship_path(@spot.user.id), local: false) do |f| %>
    <%= hidden_field_tag :followed_id, @spot.user_id %>
    <%= hidden_field_tag :spot_id, @spot.id %>
    <%= f.submit "Unfollow", class: "ml-4 px-3 py-1 text-white border border-sky-500 hover:bg-white bg-sky-500 hover:text-sky-500 rounded-full" %>
  <% end %>
<% else %>
  <%= form_with(model: @user.active_relationships.build,url: relationships_path, local: false) do |f| %>
    <%= hidden_field_tag :followed_id, @spot.user_id %>
    <%= hidden_field_tag :spot_id, @spot.id %>
    <%= f.button "Follow", type: "submit", class: "ml-4 px-3 py-1 text-sky-500 border border-sky-500 hover:bg-sky-500 hover:text-white rounded-full" %>
  <% end %>
<% end %>

