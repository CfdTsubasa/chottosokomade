<div class="flex justify-center my-4">
  <div class="border-double border-l-4 border-blue-500"></div>
  <h1 class="mx-2 text-3xl font-semibold">新規登録</h1>
</div>
<div class="block mx-4 sm:mx-12 md:mx-12 lg:mx-32 xl:mx-32 xl:px-32 lg:px-32 md:px-32 mt-5 mb-8 p-4 max-w-lgxl bg-white rounded-lg border border-gray-200 shadow-md">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="field mb-3">
      <%= f.label :name, {class: 'block mb-3 text-sm font-medium text-gray-900'} %>
      <%= f.text_field :name, autofocus: true, class: 'form-control border col-span-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' %>
    </div>
    <div class="field mb-3">
      <%= f.label :email, {class: 'block mb-3 text-sm font-medium text-gray-900'} %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control border col-span-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' %>
    </div>
    <div id="password_input" class="grid grid-cols-2 flex">
      <div class="field mb-3">
        <%= f.label :password, {class: 'block mb-3 text-sm font-medium text-gray-900'} %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control border col-span-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-3/5 p-2.5' %>
      </div>
      <div class="field mb-3">
        <%= f.label "password(確認用)", {class: 'block mb-3 text-sm font-medium text-gray-900'} %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control border col-span-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-3/5 p-2.5' %>
      </div>
    </div>
    <div class="actions text-center mt-8">
      <%= f.submit "登録する",class: 'bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow' %>
    </div>
  <% end %>
</div>